datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

model Estudiante {
  id                Int    @id @default(autoincrement())
  nombreEstudiante  String
  curso             String
  modulo            String
  leccion           String
  idAcudiente       String
  nombreAcudiente   String
  telefonoAcudiente String
  correoAcudiente   String
}

model Tutor {
  id       Int    @id @default(autoincrement())
  nombre   String
  pais     String
  telefono String
  correo   String
  cursos   String
}

model ClasesExtra {
  id           Int      @id @default(autoincrement())
  tutorId      Int
  estudianteId Int
  fecha        DateTime
  hora         String
  descripcion  String
}

model Modulo {
  id          Int    @id @default(autoincrement())
  nombre      String
  descripcion String
}

model Notificacion {
  id      Int    @id @default(autoincrement())
  titulo  String
  mensaje String
}

model User {
  id       Int    @id @default(autoincrement())
  username String @unique
  password String
}
